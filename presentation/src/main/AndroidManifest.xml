<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.jemshit.challenge.presentation">

    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:name="com.jemshit.challenge.presentation.ChallengeApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity
            android:name="com.jemshit.challenge.presentation.ui.login.LoginActivity"
            android:theme="@style/AppTheme.FullScreen.NoTitle">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>

        <activity
            android:name="com.jemshit.challenge.presentation.ui.profile_detail.ProfileDetailActivity"
            android:theme="@style/AppTheme.FullScreen.NoTitle"/>

        <activity
            android:name="com.jemshit.challenge.presentation.ui.profile_list.ProfileListActivity"
            android:theme="@style/AppTheme.FullScreen.NoTitle"/>

    </application>

</manifest>